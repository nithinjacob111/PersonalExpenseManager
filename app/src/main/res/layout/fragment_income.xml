<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/incomeAmountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:textSize="30dp"
        android:textAlignment="textEnd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/bodered_edittext"
        android:hint="Amount"/>

    <Spinner
        android:id="@+id/incomeCategorypinner"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:padding="10dp"
        android:entries="@array/security_questions"
        android:background="@drawable/bodered_edittext"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/incomeDescriptionditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="description"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:background="@drawable/bodered_edittext"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/selectDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bodered_edittext_half_rounded"
            android:hint="Date" />

        <Button
            android:id="@+id/selectDateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:layout_marginTop="14dp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-thin"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_event_black_24dp"
            android:background="@drawable/button_half_rounded"
            android:text="Set Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/selectTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="time"
            android:fontFamily="sans-serif"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="14dp"
            android:background="@drawable/bodered_edittext_half_rounded"
            android:hint="Time" />

        <Button
            android:id="@+id/selectTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-thin"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:background="@drawable/button_half_rounded"
            android:layout_marginRight="10dp"
            android:text="Set time" />
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="sans-serif-thin"
        android:background="@drawable/button_rounded"
        android:text="Add Income"
        android:textColor="#ffffff"
        android:textSize="25dp"/>

</LinearLayout>